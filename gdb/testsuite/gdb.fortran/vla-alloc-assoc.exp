standard_testfile "vla.f90"

if { [prepare_for_testing ${testfile}.exp ${testfile} ${srcfile} {debug f90 quiet}] } {
    untested ${testfile}.exp
    return -1
}

if ![runto MAIN__] then {
    perror "couldn't run to breakpoint MAIN__"
    continue
}

# Check the association status of various types of VLA's
# and pointer to VLA's

gdb_breakpoint [gdb_get_line_number "vla1-allocated"]
gdb_continue_to_breakpoint "vla1-allocated"
gdb_test "print l" "\\$\[0-9\]* = \\.TRUE\\." "ptype vla1 allocated"

gdb_breakpoint [gdb_get_line_number "vla2-allocated"]
gdb_continue_to_breakpoint "vla2-allocated"
gdb_test "print l" "\\$\[0-9\]* = \\.TRUE\\." "ptype vla2 allocated"

gdb_breakpoint [gdb_get_line_number "pvla-associated"]
gdb_continue_to_breakpoint "pvla-associated"
gdb_test "print l" "\\$\[0-9\]* = \\.TRUE\\." "ptype pvla associated"

gdb_breakpoint [gdb_get_line_number "pvla-re-associated"]
gdb_continue_to_breakpoint "pvla-re-associated"
gdb_test "print l" "\\$\[0-9\]* = \\.TRUE\\." "ptype pvla re-associated"

gdb_breakpoint [gdb_get_line_number "pvla-deassociated"]
gdb_continue_to_breakpoint "pvla-deassociated"
gdb_test "print l" "\\$\[0-9\]* = \\.FALSE\\." "ptype pvla deassociated"

gdb_breakpoint [gdb_get_line_number "vla1-deallocated"]
gdb_continue_to_breakpoint "vla1-deallocated"
gdb_test "print l" "\\$\[0-9\]* = \\.FALSE\\." "ptype vla1 deallocated"

gdb_breakpoint [gdb_get_line_number "vla2-deallocated"]
gdb_continue_to_breakpoint "vla2-deallocated"
gdb_test "print l" "\\$\[0-9\]* = \\.FALSE\\." "ptype vla2 deallocated"
